class Main {
    public static void main(String args[])
    {
        Scanner Sc = new Scanner(System.in);
        System.out.println("enter an ingeter to check it is even or odd");
        int num = Sc.nextInt();
        if(num%2 == 0){
            System.out.println( num+ "5 is an even number");
        }
        else{
            System.out.println(num+"5 is an odd number");
        }
    }
}
